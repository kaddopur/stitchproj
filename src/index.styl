navbar_text_color = gray
theme_color = #f25c5c
theme_background = #ebebeb

body
  font-family: 'Open Sans Condensed', sans-serif
  background: theme_background

// navbar
ul.nav
  top: 2px

.navbar .nav .active
  & > a
    color: lighten(navbar_text_color, 40%)
    background: white
    -webkit-transition: all 0.2s linear
  & > a:hover
    color: darken(navbar_text_color, 50%)
    background: white

.navbar-inner
  background: white

.brand
  position: relative
  top: 2px

  
// content
body > .container
  padding-top: 60px

.well
  font-size: 20px
  font-weight: 300
  color: navbar_text_color

.carousel
  margin-bottom 0

